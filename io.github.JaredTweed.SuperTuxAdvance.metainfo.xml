<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application" xmlns="http://www.freedesktop.org/standards/metainfo">

  <!--
    This file is an AppStream (metainfo) manifest describing SuperTux Advance.
    Reference: https://www.freedesktop.org/software/appstream/docs/
  -->

  <!-- MUST match your .desktop file name minus the .desktop extension -->
  <id>io.github.JaredTweed.SuperTuxAdvance</id>

  <!-- Licenses -->
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>AGPL-3.0-or-later</project_license>

  <!-- Developer name or organization. Optional, but helps show who makes the app -->
  <developer_name>Jared Tweed</developer_name>

  <!-- REQUIRED: The name of your app that GNOME Software displays -->
  <name>SuperTux Advance</name>

  <!-- REQUIRED: A short, one-line summary or tagline of your app's purpose -->
  <summary>A fun fan-made platformer starring Tux.</summary>

  <!-- REQUIRED: A more detailed description with paragraphs -->
  <description>
    <p>
      SuperTux Advance is a 2D platformer starring Tux. It brings new levels,
      enemies, and fun challenges, mixing classic platforming with modern
      features.
    </p>
    <p>
      This game is fully open-source and supports mods and bonus level packs.
      Make new levels or even your own game with it! Be sure to share your
      creations and feedback on our
      <a href="https://discord.gg/bcyC2Q6a9x">Discord server</a>.
    </p>
  </description>

  <!-- Categories: Must be recognized by AppStream (Game, ArcadeGame, etc.) -->
  <categories>
    <category>Game</category>
    <category>ArcadeGame</category>
    <category>PlatformGame</category>
  </categories>

  <!-- OARS Content Rating (Recommended by GNOME Software & Flathub) -->
  <content_rating type="oars-1.1">
    <content_attribute id="violence-cartoon">mild</content_attribute>
  </content_rating>

  <!-- The <launchable> tag tells GNOME Software which desktop file to launch. -->
  <launchable type="desktop-id">io.github.JaredTweed.SuperTuxAdvance.desktop</launchable>

  <!-- 'provides' helps the store know which binaries are installed. 
       Typically matches your .desktop Exec name or the binary itself. -->
  <provides>
    <binary>io.github.JaredTweed.SuperTuxAdvance</binary>
  </provides>

  <!-- If you have multiple screenshots, list them here. Use immutable URLs if possible. -->
  <screenshots>
